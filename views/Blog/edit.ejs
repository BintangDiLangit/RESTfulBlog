<% include ../partials/header %>
  <div class="ui grid">
    <div class="three wide column"></div>
      <div class="ui card ten wide column">
        <div class="content">
          <div class="header">Edit Post</div>
        </div>
        <div class="content">
          <form class="ui form" action="/blog/edit-post/<%= blog.id %>/update" method="post">
            <div class="field">
              <label>Title</label>
              <input name="title" placeholder="Title" type="text" value="<%= blog.title %>">
            </div>
            <div class="field">
              <label>Image Url</label>
              <input name="image" placeholder="http://" type="text" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label for="">Descriptions</label>
                <textarea name="body" rows="3"><%= blog.body %></textarea>
            </div>
            </div>
            <button class="ui inverted orange button" type="submit">Update</button>
          </form>
        </div>
    </div>
  </div>

  <% include ../partials/footer %>
