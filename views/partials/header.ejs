<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>RESTfulBlog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
  </head>
  <style media="screen" type="text/css">
    .comment li {
      list-style: none;
      padding: 5px;
    }
    .comment li:nth-last-child(odd) {
      background-color: #cdd4cb;
    }
  </style>
  <body>
    <div class="ui fixed inverted menu">
      <div class="ui container">
        <div class="header item"><i class="code icon" style="font-size: 2em"></i> Blog Site</div>
        <a href="/" class="item">Home</a>
        <% if(currentUser) {%>
        <a href="/blog/new-post" class="item">New Post</a>
        <% } %>
        <div class="header item right">
      <% if(!currentUser) {%>
        <a href="/login" class="item">Login</a>
        <a href="/register" class="item">Register</a>
      <% } else { %>
        <a href="#!" class="item">Sign In As &nbsp;<strong><%= currentUser.username %></strong></a>
        <a href="/logout" class="item">Logout</a>
      <% } %>
      </div>
      </div>
    </div>

    <div class="ui container"  style="margin-top: 6em">

      <% if(error && error.length > 0) { %>
        <div class="ui negative message">
          <i class="close icon"></i>
          <div class="header">
            <%= error %>
          </div>
        </div>
      <% } %>
      <% if(success && success.length > 0) { %>
        <div class="ui info message">
          <i class="close icon"></i>
          <div class="header">
            <%= success %>
          </div>
        </div>
      <% } %>
