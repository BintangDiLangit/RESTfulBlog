<% include partials/header %>

  <div class="ui grid">
    <div class="two wide column"></div>
    <div class="ui card twelve wide column">
      <div class="content">
        <div class="header"><i class="list icon" style="font-size: 2em"></i> List Post</div>
      </div>
      <div class="content">
        <% blog.forEach(function(data) { %>
          <div class="ui clearing segment">
            <div class="ui medium header"><%= data.title %></div>
            <img class="ui small left floated  image" src="<%= data.image %>">
            <span><i class="time icon"></i><strong><%= data.created.toDateString() %></strong></span>
            <p><%= data.body.substring(0, 150) %></p>
            <a class="ui inverted small green button" href="/post-detail/<%= data.id %>">Read More</a>
          </div>
        <% }); %>
      </div>
    </div>

    <% include partials/footer %>
