<% include partials/header %>
<div class="ui grid">
  <div class="two wide column"></div>
  <div class="ui card twelve wide column">
    <div class="content">
      <div class="header"><%= blog.title %> <a href="/" class="ui inverted green button right floated">Back</a></div>
    </div>
    <div class="content">
      <div class="ui segment">
          <img class="ui centered image" src="<%= blog.image %>" width="900" height="400">
          <br>
          <span><i class="time icon"></i><strong><%= blog.created.toDateString() %></strong></span>
          <br><br>
          <p><%= blog.body %></p>
          <a class="ui inverted orange button" href="/edit-post/<%= blog.id %>">Edit</a>
          <a class="ui inverted red button" href="/delete-post/<%= blog.id %>">Delete</a>
        </div>
    </div>
  </div>
<% include partials/footer %>
