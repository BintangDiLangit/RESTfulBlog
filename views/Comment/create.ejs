<% include ../partials/header %>

<div class="ui grid">
  <div class="three wide column"></div>
    <div class="ui card ten wide column">
      <div class="content">
        <div class="header">Create New Comment</div>
      </div>
      <div class="content">
        <form class="ui form" action="/blog/post-detail/<%= blog.id %>/comment" method="post">
          <div class="field">
            <label>Author</label>
            <input name="author" placeholder="Author" type="text" readonly="" value="<%= currentUser.username %>">
          </div>
          <div class="field">
              <label for="">Text</label>
              <textarea name="text" rows="3"></textarea>
          </div>
          </div>
          <button class="ui inverted blue button" type="submit">Save</button>
        </form>
      </div>
  </div>
</div>

<% include ../partials/footer %>
